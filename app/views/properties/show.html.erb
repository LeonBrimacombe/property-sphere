<div class="container">
  <h1>Property View</h1>

  <%= link_to "Search results", properties_path %>

  <div>
    <h2 class="item"><%= @property.address %></h2>
    <h3 class="item"><%= @property.description %></h3>
    <h3 class="item"><%= @property.location.postcode %></h3>
    <h3 class="item"><%= @property.bedrooms %></h3>
