<div class="map-container">
  <!-- Top Bar -->
  <div class="top-bar">
    <!-- Search and List View -->
    <div class="search-container">
      <p>Your search: W12 9PQ</p>
      <%= link_to 'List view', properties_path %>
    </div>

    <!-- Filters -->
    <div class="filters">
      <button>Dropdown filter</button>
      <button>Dropdown filter</button>
      <button>Dropdown filter</button>
    </div>
  </div>

  <!-- Main Content -->
  <div class="main-content">
