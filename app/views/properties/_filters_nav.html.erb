<div class="categories">
  <div class="category-title">
    <span><i class="fa-solid fa-chart-simple"></i></span>
    <span><h5>Your filters</h5></span>
  </div>
  <hr class="hr-properties">
  <div class="filters">
  <h6 class="instruction text-center">Requirements</h6>
    <%= form_with(url: properties_path, method: :get, local: true, class: "filter-form") do |f|   %>
      <div class="filter-columns">
        <div class="filter-dropdown">
          <i class="fa-solid fa-money-bill"></i>
          <%= f.select :min_price, ["Min", 300000, 400000, 500000, 600000, 700000, 800000, 900000, 1000000], selected: params[:min_price] %>
        </div>
        <div class="filter-dropdown">
          <i class="fa-solid fa-money-bill"></i>
          <%= f.select :max_price, ["Max", 300000, 400000, 500000, 600000, 700000, 800000, 900000, 1000000], selected: params[:max_price]  %>
        </div>
      </div>
      <div class="filter-columns">
        <div class="filter-dropdown">
          <i class="fa-solid fa-bed"></i>
          <%= f.select :min_bedrooms, ["Min",1,2,3,4,5,6,7,8], selected: params[:min_bedrooms]  %>
        </div>
        <div class="filter-dropdown">
          <i class="fa-solid fa-bath"></i>
          <%= f.select :min_bathrooms, ["Min",1,2,3,4,5,6,7,8], selected: params[:min_bathrooms]   %>
        </div>
      </div>
      <div class="filter-dropdown">
        <i class="fa-solid fa-house"></i>
        <%= f.select :property_type, ["Type","flat","house", "terraced house", "semi-detached house"], selected: params[:property_type]  %>
      </div>
      <div class="filter-dropdown">
        <i class="fa-solid fa-table-cells-large"></i>
        <%= f.select :floor_area, ["Min sqm", 40, 50, 60, 70, 80, 90, 100, 110, 120, 130, 140], selected: params[:floor_area]  %>
      </div>
    <% end %>
  </div>
  <div class="priorities">
  <h6 class="instruction text-center mb-0">Priorities</h6>
      <div class="d-flex justify-content-between">
        <p>low</p>
        <p>medium</p>
        <p>high</p>
      </div>

      <%= form_with(url: properties_path, method: :get, local: true) do |f|   %>
        <p>Property</p>
        <p style="font-size: 12px;">Value, rental value, floor area</p>
        <div class="priorty-dropdown">
          <%= f.radio_button :property, "low" %>
          <%= f.radio_button :property, "medium" %>
          <%= f.radio_button :property, "high" %>
        </div>
        <p>Neighbourhood</p>
        <p style="font-size: 12px;">Crime, demographics, school quality</p>
        <div class="priorty-dropdown">
          <%= f.radio_button :property, "low" %>
          <%= f.radio_button :property, "medium" %>
          <%= f.radio_button :property, "high" %>
        </div>
        <p>Location</p>
        <p style="font-size: 12px;">Transport, nearby amenitites</p>
        <div class="priorty-dropdown">
          <%= f.radio_button :property, "low" %>
          <%= f.radio_button :property, "medium" %>
          <%= f.radio_button :property, "high" %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit "Apply filters"%>
        </div>
      <% end %>
  </div>
</div>
